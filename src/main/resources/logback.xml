<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%green(%d{YYYY-MM-dd'T'HH:mm:ss.SSS}) %highlight(%level) %cyan(%t) %cyan(\(%logger{15}:%line\)) - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.jx2" level="info" />

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>